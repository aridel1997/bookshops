<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield">

	<Dialog id="CreateBook" title="Create book">
		<smartForm:SmartForm id="idSmartForm" class="editableForm" editTogglable="true" editable="true">
			<smartForm:Group id="idGroupSmartForm">
				<smartForm:GroupElement>
					<smartField:SmartField id="idTitle-SF" value="{title}"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idAuthor-SF" value="{author_ID}" textInEditModeSource="ValueList" />
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idDescription-SF" value="{descr}" placeholder="Book description"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idPicture-SF" value="{bookPictureURL}" placeholder="hgfdf"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idGenre-SF" value="{genre}" placeholder="hgfdf"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idStock-SF" value="{stock}" placeholder="hgfdf"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idPrice-SF" value="{price}" placeholder="hgfdf"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idRating-SF" value="{rating}" placeholder="1...5"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idCurrency-SF" value="{currency_code}"/>
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>

		<beginButton>
			<Button text="Create" type="Emphasized" press="onCreateBook" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseDialog" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>