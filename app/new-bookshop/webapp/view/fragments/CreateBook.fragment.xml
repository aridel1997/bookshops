<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield">

	<Dialog id="CreateBook" title="Create book">
		<smartForm:SmartForm id="idSmartForm" class="editableForm" editTogglable="true" editable="true">
			<smartForm:Group id="idGroupSmartForm">
				<smartForm:GroupElement>
					<smartField:SmartField id="idTitleSF" value="{
                          path: 'title',
                          type: 'sap.ui.model.type.String',
                          constraints: {
                            minLength: 1
                          }}" placeholder="Book title"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idAuthorSF" value="{author_ID}" textInEditModeSource="ValueList" mandatory="true" placeholder="Select the author from the list" />
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idDescriptionSF" value="{descr}" placeholder="Book description"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idPictureSF" value="{bookPictureURL}" placeholder="Link to an image"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement >
					<smartField:SmartField id="idGenreSF" value="{genre}" placeholder="Book genre"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idStockSF" value="{
												path: 'stock',
												type: 'sap.ui.model.odata.type.Int',
												constraints:{
                      										  minimum: 0
                      										}
												}" placeholder="Current number of books" mandatory="true"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idPriceSF" value="{
												path: 'price',
												type: 'sap.ui.model.type.Float',
												constraints:{
                      										  minimum: 0.01,
                      										  maximum: 5
                      										}
												}" placeholder="Price for book" mandatory="true"/>
				</smartForm:GroupElement>
				<smartForm:GroupElement>
					<smartField:SmartField id="idRating-SF" value="{
                    						path: 'rating',
                    						type: 'sap.ui.model.type.Integer',
                    						constraints:{
                    						    minimum: 1,
                    						    maximum: 5
                    						  }
                    						}" placeholder="1...5"/>
				</smartForm:GroupElement>
			</smartForm:Group>
		</smartForm:SmartForm>

		<beginButton>
			<Button text="Create" type="Emphasized" press="onCreateBook" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseDialog" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>