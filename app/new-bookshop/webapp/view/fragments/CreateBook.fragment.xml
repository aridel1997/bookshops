<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

  <Dialog
      id="CreateBook"
      title="Create book">
    <smartForm:SmartForm
        id="idSmartForm"
        class="editableForm"
        editTogglable="true"
        editable="true">
      <smartForm:Group id="idGroupSmartForm">
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idTitleSF"
              value="{
                          path: 'title',
                          type: 'sap.ui.model.type.String',
                          constraints: {
                            minLength: 1
                          }}"
              fieldGroupIds="idFormAddBook"
              mandatory="true"
              app:fieldType="input" />

        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idAuthorSF"
              fieldGroupIds="idFormAddBook"
              value="{
                    path: 'author_ID',
                    type: 'sap.ui.model.type.String',
                    constraints:{
                      minLength: 1
                    } }"
              textInEditModeSource="ValueList"
              mandatory="true"
              placeholder="Select the author from the list"
              app:fieldType="input"
              fixedValueListValidationEnabled="true" />
          <Button
              text="Add author"
              type="Emphasized"
              press="onOpenDialogAddAuthor"
              class="sapUiLargeMarginEnd"
              width="30%" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idDescriptionSF"
              fieldGroupIds="idFormAddBook"
              value="{
                    path: 'descr',
                    type: 'sap.ui.model.type.String',
                    constraints:{
                      minLength: 1
                    } }"
              app:fieldType="input"
              mandatory="true" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idPictureSF"
              fieldGroupIds="idFormAddBook"
              value="{
                  path: 'bookPictureURL',
                  type: 'sap.ui.model.type.String'
                   }"
              placeholder="Link to an image"
              app:fieldType="input" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idGenreSF"
              fieldGroupIds="idFormAddBook"
              value="{
                      path: 'genre',
                      type: 'sap.ui.model.type.String'
                   }"
              placeholder="Book genre"
              app:fieldType="input" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idStockSF"
              fieldGroupIds="idFormAddBook"
              value="{
                  path: 'stock',
                  type: 'sap.ui.model.type.Integer',
                  constraints:{
                                  minimum: 0
                                }
                  }"
              placeholder="Current number of books"
              app:fieldType="input" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              id="idPriceSF"
              value="{
                  path: 'price',
                  type: 'sap.ui.model.type.Float',
                  constraints:{
                              minimum: 0.01
                            }
                  }"
              fieldGroupIds="idFormAddBook"
              placeholder="Price for book"
              mandatory="true"
              app:fieldType="input" />
        </smartForm:GroupElement>
        <smartForm:GroupElement>
          <smartField:SmartField
              mandatory="true"
              id="idRating-SF"
              value="{
                  path: 'rating',
                  type: 'sap.ui.model.type.Integer',
                  constraints:{
                  }
                  
                  }"
              fieldGroupIds="idFormAddBook"
              placeholder="1...5"
              app:fieldType="input" />
        </smartForm:GroupElement>
      </smartForm:Group>
    </smartForm:SmartForm>
    <beginButton>
      <Button
          text="Create"
          type="Emphasized"
          press="onCreateBook"
          class="sapUiLargeMarginBegin" />
    </beginButton>
    <endButton>
      <Button
          text="Cancel"
          press="onCloseDialog" />
    </endButton>

  </Dialog>
</core:FragmentDefinition>